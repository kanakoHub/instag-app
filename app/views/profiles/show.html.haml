.container
  .contents
    .profilePage_user_account
      %p= @profile.account
    .back-btn
      = link_to :back do
        = image_tag 'arrow.png'
    .profilePage_user_image
      .profilePage_user_image_ellipse
        = image_tag @user.avatar_image
        = form_with(model: @profile, url: profile_path, method: 'put', local: true) do |f|
          = f.file_field :avatar
          = f.submit '保存', class: 'btn-primary'
    .profilePage_user_have
      .profilePage_user_have_item
        %p posts
      .profilePage_user_have_item
        %p followers
      .profilePage_user_have_item
        %p followings

