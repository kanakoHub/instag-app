.container
  .contents
    .status-btn
      .cancel
        = link_to 'Cnacel', :back
      %div
        %p Status
      .post
        = link_to 'Post', snaps_path
    .snap_card
      .snap_author
        .snap_author_image_post
          = image_tag @snap.user.avatar_image
        .snap_author_name_post
          = @snap.user.profile.account
      .snap_contents
        %ul
          - @snap.errors.full_messages.each do |message|
            %li= message
        = form_with(model: @snap, url: snaps_path, method: 'post', local: true) do |f|
          %div
            = f.text_field :description, class: 'text'
          %div
            = f.file_field :snaps
          %div
          = f.submit '保存', class: ''