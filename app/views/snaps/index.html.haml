.container
  %header
    .camerabtn
      = link_to new_snap_path do
        = image_tag 'photo-camera.png'
    - if user_signed_in?
      .dropdown
        = image_tag current_user.avatar_image
        .dropdown_content
          = link_to 'Profile', profile_path
          = link_to 'Timeline', timeline_path
          = link_to 'Logout', destroy_user_session_path, data: { method: 'delete' }
    - else
      = link_to 'Login', new_user_session_path, class: 'header_loginBtn'
  = render 'commons/snap_card', snaps: @snaps